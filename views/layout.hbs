<!DOCTYPE html>
<html>

<head>
  <title>Portfolio-cms</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="/stylesheets/bootstrap.css">
</head>

<body>

  <div class="">
    <div class="header clearfix">
      <nav>
        <ul class="nav nav-pills pull-right">

          {{#if user}}
          <li role="presentation"><a href="/">Dashboard</a></li>
          <li><a href="/gallery">Gallery</a></li>
          <li><a href="/blogs">Blogs</a></li>
          <li><a href="/enquiry">Enquries</a></li>
          <li><a href="/admin">admin</a></li>
          <li role="presentation"><a href="/user/logout">Logout</a></li>

          {{else}}
          <li role="presentation"><a href="/user/login">Login</a></li>
          <li role="presentation"><a href="/user/register">Signup</a></li>
          {{/if}}

        </ul>
      </nav>
      <h3 class="text-muted">Admin panel Portfolio</h3>
    </div>


    <div class="row ">
      <div class="col-lg-12">
        {{#if success_msg}}
        <div class="alert alert-success">{{success_msg}}</div>
        {{/if}} {{#if error_msg}}
        <div class="alert alert-danger">{{error_msg}}</div>
        {{/if}} {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
        {{/if}} {{{body}}}
      </div>
    </div>

    <footer class="footer">
      <p>&copy; 2017 Rishabh Rawat.</p>
    </footer>

  </div>
  <!-- /container -->
</body>

</html>